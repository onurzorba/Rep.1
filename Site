body {
  background-color: black;
}
@keyframes lightning {
  from {opacity: 0;}
  to {opacity: 1;}
}
function generateLightning() {
  var elements = document.getElementsByTagName('body')[0].children;
  var randomIndex = Math.floor(Math.random() * elements.length);
  var element = elements[randomIndex];
  element.classList.add('lightning');
  setTimeout(function() {
    element.classList.remove('lightning');
  }, 200);
}
setInterval(generateLightning, 2000);
.raindrop {
  position: absolute;
  width: 3px;
  height: 15px;
  background-color: #00BFFF;
  animation: fall 0.75s linear infinite;
}

@keyframes fall {
  from {top: -20px;}
  to {top: 100%;}
}
